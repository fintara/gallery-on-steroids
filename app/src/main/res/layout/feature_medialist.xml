<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/medialist_item_card"/>

    <com.leinardi.android.speeddial.SpeedDialView
        android:id="@+id/fab_create"
        app:sdMainFabClosedSrc="@drawable/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/items" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:fabSize="auto"/>

</androidx.constraintlayout.widget.ConstraintLayout>