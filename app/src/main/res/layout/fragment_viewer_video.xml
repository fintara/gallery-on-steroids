<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:layout_height="0dp"
        android:id="@+id/video_view" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/media_controls"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:layout_height="wrap_content" android:id="@+id/media_controls"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playpause"
            style="?android:buttonBarButtonStyle"
            tools:srcCompat="@drawable/play"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration_current" tools:text="01:23" android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/seekbar" app:layout_constraintBottom_toBottomOf="@+id/seekbar"
            android:textSize="18sp" android:fontFamily="sans-serif-condensed-light"/>
        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar"
            app:layout_constraintStart_toEndOf="@+id/duration_current" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/duration_total" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/duration_total"
            app:layout_constraintTop_toTopOf="@+id/duration_total"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration_total" tools:text="02:34" android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/playpause" app:layout_constraintBottom_toBottomOf="@+id/playpause"
            app:layout_constraintEnd_toStartOf="@+id/playpause" android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-condensed-light" android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>