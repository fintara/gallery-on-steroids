<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tsovedenski.galleryonsteroids.features.common.SquareImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/media_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/video"
            android:tint="@android:color/tertiary_text_light"
            android:id="@+id/media_type"
            app:layout_constraintTop_toTopOf="@+id/media_title"
            app:layout_constraintBottom_toBottomOf="@+id/media_title"
            app:layout_constraintStart_toEndOf="@+id/media_thumbnail"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/video"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/media_title"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/media_thumbnail"
            tools:text="Some title asd dsaas da sa"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toEndOf="@+id/media_type"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/media_duration"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/media_title"
            app:layout_constraintBottom_toBottomOf="@+id/media_title"
            tools:text="02:40"
            app:layout_constraintStart_toEndOf="@+id/media_title"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/media_date"
            app:layout_constraintEnd_toEndOf="@+id/media_title"
            tools:text="4 Apr 2019, 17:50"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/media_title"
            app:layout_constraintStart_toStartOf="@+id/media_type"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>